{
  "name": "eatsfinder",
  "version": "0.0.1",
  "private": true,
  "packages": [
    "packages/*"
  ],
  "bin": {
    "lerna": "node_modules/.bin/lerna"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parser": "babel-eslint"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "fix:peer:deps": "install-peerdeps --dev --only-peers --yarn",
    "test": "jest test",
    "eject": "react-scripts eject",
    "lint": "eslint ./packages/*",
    "lint:fix": "eslint ./packages/* --fix",
    "lint:after": "prettier --write \"./packages/**/*.+(js|jsx|json|css|md)\"",
    "master:fix": "run-s lint:*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test -u"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "fs-extra": "^9.0.0",
    "husky": "^4.2.5",
    "install-peerdeps": "^2.0.3",
    "lerna": "^3.22.0",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
